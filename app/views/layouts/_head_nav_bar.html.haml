.navbar-inner.nav-bar-edited
  %ul{:class => "nav pull-right"}
    %li.logo
      = link_to(image_tag("logo.png",:size => "40x25"),  root_path)
    - if !user_signed_in? 
      %li 
        = link_to "Login", new_user_session_path
      %li 
        = link_to "Signup", new_user_registration_path 
    - else
      %li
        = link_to "Hi, #{current_user.email.split('@')[0]}!", "#"
      %li
        = link_to "#" do
          %i{:class => "icon-envelope"}
      %li
        = link_to "My Books", mybook_index_path
      %li
        = link_to "Sign out", destroy_user_session_path, :method => :delete